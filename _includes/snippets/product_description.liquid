<article class="col col--1of2 flex-center flex-col fade">
  <p class="label"
     style="align-self: flex-start; padding: var(--space-sm); background-color: var(--{{ product.colour }}-shade); color: var(--white);"
     data-aos="fade-left"
  >
    {{ product.label }}
  </p>

  <h3 class="font-serif"
      style="margin: 0 var(--gutter) var(--space-md) var(--gutter); padding: var(--space-sm); align-self: flex-start; background-color: var(--white);"
      data-aos="fade-left"
      data-aos-delay="100"
  >
    {{ product.tagline }}
  </h3>
  <div style="margin-left: var(--gutter);"
       data-aos="fade-left"
       data-aos-delay="150"
  >
    <p>{{ product.description }}</p>
    <p style="margin: var(--space-xl) 0 var(--space-lg) 0;">
      <a href="{{ product.url }}"
         target="_blank"
         rel="noopener"
         class="button button--secondary button--custom"
         style="--custom-colour: var(--{{ product.colour }}-shade);"
      >
        {{ product.cta }}
      </a>
    </p>
  </div>
</article>
