<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<title>
  {%- if page.fileSlug == '' -%}
    {{ site.name }}: {{ site.tagline_short }}
  {%- else -%}
    {{ title }} â€“ {{ site.name }}
  {%- endif -%}
</title>
<meta name="description" content="{% if meta_description %}{{ meta_description }}{% else %}We partner with libraries to build free & open source tools.{% endif %}">
<meta name="robots" content="noindex">

<link rel="manifest" href="site.webmanifest">
<link rel="apple-touch-icon" href="icon.png">

{%- comment -%}Preload our fonts Wremena + Inter{%- endcomment -%}
<link rel="preload" href="/fonts/WremenaRegular.woff" as="font" crossorigin>
<link rel="preload" href="/fonts/Inter-3.15/Inter-italic.ttf" as="font" crossorigin>
<link rel="preload" href="/fonts/Inter-3.15/Inter-roman.ttf" as="font" crossorigin>

{%- comment -%}Animate on scroll library{%- endcomment -%}
<link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
<link rel="stylesheet" href="/main.css">

<link rel="apple-touch-icon" sizes="180x180" href="../favicons/apple-touch-icon.png">
<link rel="icon" type="image/png" sizes="32x32" href="../favicons/favicon-32x32.png">
<link rel="icon" type="image/png" sizes="16x16" href="../favicons/favicon-16x16.png">
<link rel="manifest" href="../favicons/site.webmanifest">
<link rel="mask-icon" href="../favicons/safari-pinned-tab.svg" color="#25201E">
<link rel="shortcut icon" href="../favicons/favicon.ico">
<meta name="msapplication-TileColor" content="#25201E">
<meta name="msapplication-config" content="../favicons/browserconfig.xml">
<meta name="theme-color" content="#25201E">

<meta property="og:url" content="{{ site.base_url }}{{ page.fileSlug }}">
<meta property="og:type" content="website">
<meta property="og:title" content="{% if page.fileSlug == '' %}Powerfully simple open access tools{% else %}{{ title }}{% endif %}">
<meta property="og:image" content="{{ site.base_url }}img/og_img.png">
<meta property="og:image:alt" content="White OA.Works logo on a black background; the period in the logo is a large, yellow dot">
<meta property="og:description" content="{% if meta_description %}{{ meta_description }}{% else %}We partner with libraries to build free & open source tools.{% endif %}">
<meta property="og:site_name" content="{{ site.name }}">
<meta property="og:locale" content="en_US">

<meta name="twitter:card" content="summary_large_image">
<meta name="twitter:site" content="{{ site.twitter }}">
<meta name="twitter:url" content="{{ site.base_url }}{{ page.fileSlug }}">
<meta name="twitter:title" content="{% if page.fileSlug == '' %}{{ site.name }}: {{ site.tagline_short }}{% else %}{{ title }}{% endif %}">
<meta name="twitter:description" content="{% if meta_description %}{{ meta_description }}{% else %}We partner with libraries to build free & open source tools.{% endif %}">
<meta name="twitter:image" content="{{ site.base_url }}img/twitter_img.png">
<meta name="twitter:image:alt" content="White OA.Works logo on a black background; the period in the logo is a large, yellow dot">

<script>
// Display back-to-top button on scroll
var topBtn = document.getElementById("#topBtn");

function checkPosition() {
  if (window.pageYOffset > 100 || document.documentElement.scrollTop || document.body.scrollTop > 100 || document.documentElement.scrollTop > 100) {
    topBtn.style.display = "flex";
  } else {
    topBtn.style.display = "none";
  }
}

window.addEventListener('scroll', checkPosition);
</script>
