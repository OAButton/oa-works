---
layout: layouts/base.liquid
body_class: default
---

<section class="row markdown{% if theme != 'dark' %} bg-white{% endif %}">
  <header class="col col--1of3 default__header" data-aos="fade-up">
    <h1>{{ title }}</h1>
    {% if meta_description %}<p>{{ meta_description }}</p>{% endif %}
  </header>

  <div class="col col--1of2 markdown__content">
    <section data-aos="fade-up" data-aos-delay="100">
      {{ content }}
    </section>
  </div>
</section>
