<!doctype html>
<html class="no-js" lang="en">
  <head>
    {% include 'partials/head.liquid' %}
  </head>

  <body{% if body_class %} class="{{ body_class }}"{% endif %}>
    <!--[if IE]>
    <p class="browserupgrade">You are using an outdated browser. Please <a href="https://browsehappy.com/">upgrade your browser</a> to improve your experience and security.</p>
    <![endif]-->

    {%- comment %}Site header{% endcomment -%}
    {% include 'partials/header.liquid' %}
    <main id="main">
      {%- comment %}Page-specific header{% endcomment -%}
      {% include 'partials/subheader.liquid' %}

      {{ content }}

      {%- comment %}Page-specific prefooter{% endcomment -%}
      {% include 'partials/prefooter.liquid' %}
    </main>
    {%- comment %}Site footer{% endcomment -%}
    {% include 'partials/footer.liquid' %}

    <script src="{{ site.base_url }}/assets/js/sal.js"></script>
    <script src="{{ site.base_url }}/assets/js/jquery-3.6.0.min.js"></script>

    <script src="{{ site.base_url }}/assets/js/detect-browser.js"></script>
    <script src="{{ site.base_url }}/assets/js/main.js"></script>
    <script src="{{ site.base_url }}/assets/js/newsletter.js"></script>

    <noscript><img src="https://sa.oa.works/noscript.gif" alt=""/></noscript>
    <script async defer src="https://sa.oa.works/latest.js"></script>

    {% block extra_js %}{% endblock %}
  </body>
</html>
