---
layout: layouts/base.liquid
body_class: default
---

<section class="row border-top markdown{% if theme != 'dark' %} bg-white{% endif %}">
  <header class="col col--1of3 markdown__header-wrapper" data-sal="slide-up">
    <div>
      <h1>{{ title }}</h1>
      {% if meta_description %}<p>{{ meta_description }}</p>{% endif %}
    <div>
  </header>

  <div class="col col--1of2 markdown__content">
    <section data-sal="slide-up" data-sal-delay="100">
      {{ content }}
    </section>
  </div>
</section>
