---
layout: layouts/base.liquid
body_class: header-left
---

<section class="row border-top {{ content_layout }}{% if theme != 'dark' %} bg-white{% endif %}">
  <header class="col col--1of3">
    <div class="markdown__header-wrapper">
      <h1>{{ title }}</h1>
      {% if meta_description %}<p>{{ meta_description }}</p>{% endif %}
      {% include 'snippets/ellipsis.liquid' %}
    </div>
  </header>

  {% if content_layout == 'list' %}
    {% include 'layouts/content/list.liquid' %}
  {% elsif content_layout == 'cards' %}
    {% include 'layouts/content/cards.liquid' %}
  {% else %}
    {% include 'layouts/content/markdown.liquid' %}
  {% endif %}
</section>
