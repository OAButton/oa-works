{% for value in values %}
{% assign delay_count = delay_count | plus: 100 %}
<li class="col col--1of2 card-wrapper" data-sal="slide-up" data-sal-delay="{{ delay_count }}">
  <p class="label label--secondary line-thru">
    <small class="line-thru__inner bg-white label">{{ value.goal }}</small>
  </p>
  <article class="card">
    <h2 class="card__header">
      <div class="card__icon">{% include value.shape %}</div>
      <span class="type-1">{{ value.heading }}</span>
    </h2>
    <div class="card__body">
      <p>{{ value.desc }}</p>
    </div>
  </article>
</li>
{% endfor %}
