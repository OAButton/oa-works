<ul class="row">
  {% assign delay_count = 0 %}
  {% for stat in impact %}
  {% assign delay_count = delay_count | plus: 100 %}
  <li class="col col--1of2 card-wrapper" data-sal="slide-up" data-sal-delay="{{ delay_count }}">
    <article class="card card--small">
      <header class="card__header">
        <span class="type-1">{{ stat.value }}</span><br/>
        <span class="font-serif">{{ stat.key }}</span>
      </header>
      <div class="card__body">
        <p>{{ stat.desc }}</p>
      </div>
    </article>
  </li>
  {% endfor %}
</ul>
