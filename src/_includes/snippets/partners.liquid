<ul class="row team">
  {% assign delay_count = 0 %}
  {% for partners in partners %}
  {% assign delay_count = delay_count | plus: 100 %}
  <li class="col col--1of3" data-sal="slide-up" data-sal-delay="{{ delay_count }}">
    <article class="card card--small">
      <p class="card__header card__header--plain label">{{ partners.name }}</p>
      <div class="card__body">
        <h2 class="font-sans type-4">{{ partners.person }}</h2>
        {% if partners.img %}
        <figure class="portrait" style="background-color: var(--{{ person.colour }});">
          <img src="/img/{{ partners.img }}" alt="{{ partners.img_alt }}"/>
        </figure>
        {% endif %}
        <p>{{ partners.reason }}</p>
      </div>
    </article>
  </li>
  {% endfor %}
</ul>
